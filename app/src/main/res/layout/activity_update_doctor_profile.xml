<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDoctorProfile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="UPDATE DOCTOR PROFILE"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#3d3b3b"

            />

        <EditText
            android:id="@+id/idUpdateDoctorET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="ID : "
            android:textColorHint="#3d3b3b"
            />

        <EditText
            android:id="@+id/nameUpdateDoctorET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Name"
            android:textColorHint="#3d3b3b"
            />
        <EditText
            android:id="@+id/datailsUpdateDoctorET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Details"
            android:textColorHint="#3d3b3b"
            />
        <EditText
            android:id="@+id/appointmentUpdateDoctorET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Appoinment"
            android:textColorHint="#3d3b3b"
            />
        <EditText
            android:id="@+id/emailUpdateDoctorET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Email"
            android:textColorHint="#3d3b3b"
            />

        <EditText
            android:id="@+id/phoneUpdateDoctorET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Phone"
            android:textColorHint="#3d3b3b"
            />

        <Button
            android:id="@+id/updateDoctorButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Update"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:textColorHint="#3d3b3b"
            />

    </LinearLayout>



</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/addMedicalHistoryLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/medicalImageView"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Take Picture"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:textColor="#3d3b3b"/>


        <EditText
            android:id="@+id/nameDoctorMedicalET"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Name"
            android:textColorHint="#3d3b3b"
            />
        <EditText
            android:id="@+id/datailsDoctorMedicalET"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Details"
            android:textColorHint="#3d3b3b"
            />
        <EditText
            android:id="@+id/dateMedicalET"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:hint="Date"
            android:textColorHint="#3d3b3b"/>

        <Button
            android:id="@+id/addMedicalSaveButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="Save"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:textColor="#3d3b3b"
            />


    </LinearLayout>

</ScrollView>